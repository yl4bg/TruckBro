<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <!-- customize action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- customize font -->
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="textFieldStyle">@style/TextField</item>
        <!-- customize back button in action bar -->
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_720_90</item>
        <item name="android:titleTextStyle">@style/CustomActionbarText</item>

        <item name="titleTextStyle">@style/CustomActionbarText</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_720_90</item>
    </style>

    <!-- change action bar text size -->
    <style name="CustomActionbarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title_textsize</item>
    </style>


    <!-- change application's font -->
    <style name="AppTheme.Widget"/>

    <style name="TextViewNoStyleParent">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="fontPath">fonts/FZYTK.TTF</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/FZYTK.TTF</item>
    </style>

    <style name="AppTheme.Widget.TextView.Style">
        <item name="fontPath">fonts/FZYTK.TTF</item>
    </style>

    <style name="TextField" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/FZYTK.TTF</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>
</resources>
