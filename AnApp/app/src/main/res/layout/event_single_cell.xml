<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_cell"
    android:layout_width="fill_parent"
    android:layout_height="79dp"
    android:background="@drawable/event_single_background_new"
    >

    <LinearLayout
        android:id="@+id/single_cell_left_banner"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/event_single_cell_unoffical_banner">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/single_cell"
            android:layout_marginBottom="1.7dp"
            android:layout_alignTop="@id/single_cell"
            android:textSize="13sp"
            android:textColor="#141414"
            android:gravity="right"
            android:paddingTop="3.99472dp"
            android:paddingRight="2.90525dp"
            android:text="李全蛋"
            android:id="@+id/left_banner_user_name" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="73.54dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_icon"
            android:layout_width="54.473475dp"
            android:layout_height="47.936655dp"
            android:layout_marginLeft="8.171025dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/crowded_new_symbol" />
        <!--margint top TO BE DETERMINED-->
        <TextView
            android:id="@+id/typeText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="拥堵"
            android:textColor="#141414"
            android:textSize="15sp" />
        <!--margint top TO BE DETERMINED-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="122.5653dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/directionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="东南"
                android:textColor="#141414"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7.5dp"
                android:text="10.5公里"
                android:textColor="#141414"
                android:textSize="19sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/roadNum"
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="工人体育场南路"
            android:textColor="#323232"
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/timeText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="-3dp"
            android:text="30 分钟前"
            android:textColor="#505050"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/single_cell_right_layout"
        android:orientation="vertical"
        android:layout_width="87.15756dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/upvote_layout"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/upvote_icon"
                android:layout_width="23.423595dp"
                android:layout_height="17.431515dp"
                android:src="@drawable/upvote_icon_new"/>
            <TextView
                android:id="@+id/upvote_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_layout"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/report_icon"
                android:layout_width="22.878855dp"
                android:layout_height="20.155185dp"
                android:src="@drawable/report_icon_new"/>
            <TextView
                android:id="@+id/report_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
