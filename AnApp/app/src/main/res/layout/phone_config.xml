<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/upload_profile_image_bg">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="49.02612dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号设置"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="43.57878dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39.220905dp"

            android:text="手机号对其可见"
            android:textColor="#d2d2d2"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  (可多选)"
            android:textColor="#a0a0a0"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="43.57878dp">

        <RelativeLayout
            android:layout_marginLeft="46.30245dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driver_checkbox_layout">

            <ImageView
                android:layout_width="15.25257dp"
                android:layout_height="15.25257dp"
                android:src="@drawable/new_unselected_box"
                android:id="@+id/driver_checkbox"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.602525dp"
                android:text="司机"
                android:textColor="#b4b4b4"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54.473475dp"
            android:id="@+id/owner_checkbox_layout">

            <ImageView
                android:layout_width="15.25257dp"
                android:layout_height="15.25257dp"
                android:src="@drawable/new_unselected_box"
                android:id="@+id/owner_checkbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.602525dp"
                android:text="货主"
                android:textColor="#b4b4b4"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54.473475dp"
            android:id="@+id/her_checkbox_layout">

            <ImageView
                android:layout_width="15.25257dp"
                android:layout_height="15.25257dp"
                android:src="@drawable/new_unselected_box"
                android:id="@+id/her_checkbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.602525dp"
                android:text="其他"
                android:textColor="#b4b4b4"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="49.02612dp"
        android:layout_marginLeft="39.220905dp"
        android:layout_marginTop="231.51225dp"
        android:text="若想更改手机号，请从主页联系万能客服"
        android:textColor="#b4b4b4"
        android:textSize="14sp"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.85511dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59.920815dp"
        android:layout_marginTop="101.32065dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/confirm_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/confirm_upload"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认更改"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/cancel_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cancel_upload">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消更改"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>