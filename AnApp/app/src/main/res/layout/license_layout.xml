<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upload_profile_image_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="49.02612dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证驾驶证"
            android:id="@+id/title_text"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/take_first_photo"
                android:layout_width="fill_parent"
                android:layout_height="192.29136dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="9.26049dp"
                android:layout_marginRight="7.626285dp"
                android:layout_marginTop="8.171025dp"
                android:background="@drawable/upload_license_bg"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:id="@+id/p1"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="13.618365dp"
                    android:layout_height="13.618365dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="114.894695dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add"
                    android:id="@+id/p1_plus_sign"/>

                <TextView
                    android:id="@+id/p1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10.93903dp"
                    android:text="点击上传驾驶证主页"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#141414"
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/take_second_photo"
                android:layout_width="fill_parent"
                android:layout_height="192.29136dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="9.26049dp"
                android:layout_marginRight="7.626285dp"
                android:layout_marginTop="37.5867dp"
                android:background="@drawable/upload_license_bg"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:id="@+id/p2"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="13.618365dp"
                    android:layout_height="13.618365dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="114.894695dp"
                    android:src="@drawable/add"
                    android:scaleType="fitXY"
                    android:id="@+id/p2_plus_sign"/>

                <TextView
                    android:id="@+id/p2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10.93903dp"
                    android:gravity="center_horizontal"
                    android:text="点击上传驾驶证附页"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#141414"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.85511dp"
                android:layout_marginBottom="61.010295dp"
                android:layout_marginTop="55.0182dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/confirm_upload"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/confirm_upload"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认上传"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cancel_upload"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cancel_upload"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消上传"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>